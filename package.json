{
  "name": "express-arch",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_ENV=test DOTENV_CONFIG_PATH=.env.test vitest --config vitest.config.ts",
    "coverage": "vitest run --coverage",
    "start": "cross-env NODE_ENV=production ts-node index.ts",
    "dev": "cross-env NODE_ENV=development nodemon index.ts",
    "build": "npx tsc && cross-env NODE_ENV=production",
    "precommit": "npm run swagger && npm run lint",
    "swagger": "ts-node swagger.ts",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "prepare": "husky && husky install",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "db:push": "npx drizzle-kit push",
    "db:generate": "npx drizzle-kit generate && drizzle-kit generate --dialect=postgresql --schema=src/schema.ts --out=./drizzle",
    "db:studio": "npx drizzle-kit studio",
    "lint-staged": {
      "**/*.{js,jsx,ts,tsx}": [
        "eslint --max-warnings=0",
        "prettier --write"
      ],
      "**/*.{html,json,css,scss,md,mdx}": [
        "prettier -w"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@neondatabase/serverless": "^0.10.4",
    "@stripe/stripe-js": "^6.1.0",
    "ably": "^2.6.4",
    "axios": "^1.8.3",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "country-flag-emoji": "^1.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "express": "^4.21.2",
    "express-oas-generator": "^1.0.46",
    "express-rate-limit": "^7.5.0",
    "express-winston": "^4.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "luxon": "^3.5.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.9",
    "socket.io": "^4.8.1",
    "stripe": "^17.7.0",
    "stripe-webhook-middleware": "^0.2.0",
    "supertest": "^7.0.0",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "trim-request": "^1.0.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@clerk/express": "^1.3.46",
    "@types/express": "^5.0.0",
    "@types/luxon": "^3.4.2",
    "@types/morgan": "^1.9.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "husky": "^8.0.0",
    "msw": "^2.7.3",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.0.9"
  }
}
